# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=activereachdb

# AI Services (Configure at least one for AI features)
# Get OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Get Google Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# CORS Configuration
# Add your frontend URLs (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Email/Scheduler (enable automated sending)
# Set DRY_RUN=true to log emails instead of sending
DRY_RUN=true
# SMTP provider config (use your ESP: Gmail SMTP, Mailgun, SendGrid, SES SMTP, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
# Use app password or provider API key
SMTP_PASS=your_app_password
# Optional explicit from address (defaults to SMTP_USER)
SMTP_FROM=your_email@gmail.com

# Scheduler cadence (seconds between checks)
SCHEDULER_INTERVAL_SECONDS=30

# Optional: LinkedIn API (for future features)
# LINKEDIN_CLIENT_ID=your_linkedin_client_id
# LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
